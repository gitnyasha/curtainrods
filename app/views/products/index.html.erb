	<section class="intro-section">
		<div class="container text-center">
			<div class="row">
				<div class="col-xl-10 offset-xl-1">
					<h2 class="section-title">Quality curtain rods</h2>
				</div>
			</div>
		</div>
	</section>
<section class="portfolio-section">
                     
		<div class="container-fluid p-md-0 ">
			<div class="row portfolios-area">
          <% @products.each do |product| %>
				<div class="mix col-lg-6 col-md-6 web">
            <%= image_tag(product.image_url(:default), class: "portfolio-item set-bg") %>
				      <% if user_signed_in? %>
      <%= link_to "Edit", edit_product_path(product) %>
      <%= link_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
                </div>
	

          <% end %>
			</div>
		</div>
	</section>
<% if user_signed_in? %>
<%= link_to "Enter new curtain rod", new_product_path, class: "site-btn" %>
<% end %>
</div>